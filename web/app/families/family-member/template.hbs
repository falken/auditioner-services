<div class="row">
  {{#link-to 'families.family' model.family.id tagName='a'}}
    Back to Family Members
  {{/link-to}}
</div>



<div class="row">
  <div class="col-md-7">
    <div class="row">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{model.familyMember.firstName}} {{model.familyMember.lastName}}</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                    <tbody>
                    <tr>
                        <td>Height</td>
                        <!-- <td>6' 4"</td> -->
                        <td>{{model.familyMember.height}}</td>
                    </tr>
                    <tr>
                        <td>Weight</td>
                        <td>{{model.familyMember.weight}}</td>
                    </tr>
                    <tr>
                        <td>Age</td>
                        <td>{{model.familyMember.age}}</td>
                    </tr>
                    <tr>
                        <td>Ballet Experience</td>
                        <td>2</td>
                    </tr>
                    <tr>
                        <td>Tap Experience</td>
                        <td>2</td>
                    </tr>
                    <tr>
                        <td>Jazz Experience</td>
                        <td>2</td>
                    </tr>
                    <tr>
                        <td>Acrobats Experience</td>
                        <td>2</td>
                    </tr>
                    <tr>
                        <td>Prior Experience</td>
                        <td>Drummer Boy</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Product Registrations</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                  <thead>
                  <tr>
                    <th class="col-md-4">Production</th>
                    <th class="col-md-4">Audition Number</th>
                    <th class="col-md-4">Requested Roles</th>
                    <th class="col-md-1">&nbsp;</th>
                    <th class="col-md-1">&nbsp;</th>
                  </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Nutcracker</td>
                      <td>1425</td>
                      <td>Indian Boy</td>
                      <td  class="text-right">
                        <a {{action 'editRegistration' productRegistration}} ><span class="glyphicon glyphicon-pencil"></span></a>
                      </td>
                      <td  class="text-right">
                        <a {{action 'deleteRegistration' productRegistration}} ><span class="glyphicon glyphicon-trash"></span></a>
                      </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
    </div>
        {{#if isEditing}}
          <div class="col-md-offset-1 col-md-4">
            <div class="row">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Add Registration</h3>
                </div>
                <div class="panel-body">
                  <form class="form-horizontal">
                    <!-- <div class="form-group"> -->
                      <!-- {{input type="text" class="form-control col-md-3" placeholder="First Name" value=editingFamilyMember.firstName}} -->
                      <!-- {{select class="form-control col-md-3" placeholder="Select Production" }} -->
                    <!-- </div> -->
                    <div class="form-group">
                    {{#x-select placeholder="Select Production"}}
                      <!-- {{#each model.productions.results as | production | }}
                          {{#xs.option value=production.id}}{{production.name}}{{/xs.option}}
                      {{/each}} -->
                    {{/x-select}}
                    </div>
                    <div class="form-group">
                      {{input type="text" class="form-control col-md-3" placeholder="Requested Roles" value=editingFamilyMember.height}}
                    </div>
                    <div class="form-group">
                      {{input type="text" class="form-control col-md-3" placeholder="Rehersal Conflicts" value=editingFamilyMember.height}}
                    </div>
                    <div class="row">
                      <div class="col-sm-10">
                      <button {{action 'saveEditingFamilyMember' }} class="btn btn-primary">
                        {{#if isAdd}}
                          Add
                          {{else}}
                          Save
                        {{/if}}
                      </button>
                        <button {{action 'cancelEditingRegistration' }} class="btn btn-default">Cancel</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        {{/if}}


</div>
