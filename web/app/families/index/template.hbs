<div class="row">
  <div class="col-md-6">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-9">
              <h3 class="panel-title">Families</h3>
            </div>
            <div class="col-md-3 text-right">
              <a {{action 'addFamily' result}} ><span class="glyphicon glyphicon-plus"></span></a>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover table-condensed">
            <tbody>
            {{#each model.results as |result| }}
              <tr>
                {{#link-to 'families.family' result.id tagName='td' class="col-md-10"}}
                  {{result.name}}
                {{/link-to}}
                <td class="col-md-1">
                  <a {{action 'editFamily' result}} ><span class="glyphicon glyphicon-pencil"></span></a>
                </td>
                <td class="col-md-1">
                  <a {{action 'deleteFamily' result}} ><span class="glyphicon glyphicon-trash"></span></a>
                </td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  {{#if isEditing}}
  <div class="col-md-offset-1 col-md-5">

    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Add Family</h3>
        </div>
        <div class="panel-body">
          <form class="form-inline">
            <div class="form-group">
              {{input type="text" class="form-control col-md-3" placeholder="Family Name" value=editingFamily.name}}
            </div>

            <div class="form-group">
              {{input type="email" class="form-control col-md-3" placeholder="Contact Email"
                      value=editingFamily.contactEmail}}
            </div>
            <div class="form-group">
              {{input type="text" class="form-control col-md-3" placeholder="Contact Phone"
                      value=editingFamily.contactPhone}}
            </div>

            <div class="form-group">
              {{input type="text" class="form-control col-md-3" placeholder="Mailing Address Line 1"
                      value=editingFamily.mailingAddressLine1}}
            </div>

            <div class="form-group">
              {{input type="text" class="form-control col-md-3" placeholder="Mailing Address Line 2"
                      value=editingFamily.mailingAddressLine2}}
            </div>

            <div class="form-group">
              {{input type="text" class="form-control col-md-3" placeholder="City"
                      value=editingFamily.mailingAddressCity}}
              {{input type="text" class="form-control col-md-3" placeholder="State"
                      value=editingFamily.mailingAddressState}}
              {{input type="text" class="form-control col-md-3" placeholder="Zip"
                      value=editingFamily.mailingAddressZip}}
            </div>
              <div class="panel-heading">
                  <h4 class="panel-title">Preferred Contact Method</h4>
              </div>
              <div class="form-group">

                  {{#radio-button
                          value="Phone"
                          groupValue=preferredContactMethod
                          changed="choosePreferredContactMethod"}}
                      Phone
                  {{/radio-button}}

                  {{#radio-button
                          value="Email"
                          groupValue=preferredContactMethod
                          changed="choosePreferredContactMethod"}}
                      Email
                  {{/radio-button}}
                  {{#radio-button
                          value="Mail"
                          groupValue=preferredContactMethod
                          changed="choosePreferredContactMethod"}}
                      Mail
                  {{/radio-button}}
              </div>

            <div class="row">
              <div class="col-sm-10">
                <button {{action 'saveEditingFamily' }} class="btn btn-primary">
                  {{#if isAdd}}
                    Add
                  {{else}}
                    Save
                  {{/if}}
                </button>
                <button {{action 'cancelEditingFamily' }} c class="btn btn-default">Cancel</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{/if}}
</div>
