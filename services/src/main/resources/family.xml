<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="family-1" author="snelson">
        <createTable tableName="Family">
            <column name="Id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="Name" type="nvarchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="Email" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="Phone" type="varchar(10)">
                <constraints nullable="true"/>
            </column>
            <column name="Address01" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="Address02" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="City" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="State" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="ZipCode" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
            <column name="PreferredContactMethod" type="varchar(256)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
